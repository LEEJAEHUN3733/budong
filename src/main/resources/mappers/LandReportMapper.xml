<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.com.ljh.budong.mappers.LandReportMapper">
    <insert id="insertLandReport" parameterType="org.com.ljh.budong.entities.LandReportEntity">
        INSERT INTO `budong`.`land_reports` (`pnu`, `user_email`, `created_at`)
        VALUES (#{pnu}, #{userEmail}, #{createdAt})
    </insert>

    <select id="selectLandReport" resultType="org.com.ljh.budong.entities.LandReportEntity">
        SELECT `pnu`            AS `pnu`,
               `user_email`     AS `userEmail`,
               `created_at`     AS `createdAt`
        FROM `budong`.`land_reports`
        WHERE `pnu` = #{pnu}
          AND BINARY `user_email` = #{userEmail}
        LIMIT 1
    </select>
</mapper>