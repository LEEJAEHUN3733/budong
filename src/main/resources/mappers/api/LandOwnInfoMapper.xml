<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.com.ljh.budong.mappers.api.LandOwnInfoMapper">
    <select id="selectLandOwnInfo" resultType="org.com.ljh.budong.entities.api.LandOwnInfoEntity">
        SELECT `pnu`                          AS `pnu`,
               `land_share`                   AS `landShare`,
               `possession`                   AS `possession`,
               `ownership_change_date`        AS `ownershipChangeDate`,
               `updated_at`                   AS `updatedAt`
        FROM `budong`.`land_own_info`
        WHERE `pnu` = #{pnu}
        LIMIT 1
    </select>

    <insert id="insertLandOwnInfo" parameterType="org.com.ljh.budong.entities.api.LandOwnInfoEntity">
        INSERT INTO `budong`.`land_own_info` (`pnu`, `land_share`, `possession`, `ownership_change_date`, `updated_at`)
        VALUES (#{pnu}, #{landShare}, #{possession}, #{ownershipChangeDate}, #{updatedAt})
    </insert>

    <update id="updateLandOwnInfo" parameterType="org.com.ljh.budong.entities.api.LandOwnInfoEntity">
        UPDATE `budong`.`land_own_info`
        SET `pnu`                          = #{pnu},
            `land_share`                   = #{landShare},
            `possession`                   = #{possession},
            `ownership_change_date`        = #{ownershipChangeDate},
            `updated_at`                   = #{updatedAt}
        WHERE BINARY `pnu` = #{pnu}
        LIMIT 1
    </update>
</mapper>